{
    "manifest_version":2,
    "name":"BudgetManager",
    "version":"1.0",
    "description":"Track Expenses",
    "icons":{
        "128":"128.png",
        "48":"48.png",
        "16":"16.png"
    },
    "browser_action":{
        "default_icon":"16.png",
        "default_popup":"popup.html"
    },
    "options_page":"options.html",
    "background":{
        "scripts":["eventPage.js"],
        "persistent":false
    },
    "permissions":[
        "storage",
        "notifications",
        "contextMenus"
    ]
}